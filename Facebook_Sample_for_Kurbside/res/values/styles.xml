<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.Kurbside" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:spinnerStyle">@style/KurbsideSpinnerItemStyle</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="Theme.Kurbside.MainActivity" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionModeCloseButtonStyle">@style/ActionModeCloseButton</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="ActionBarButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/button_blue_selectable</item>
    </style>

    <style name="ActionModeCloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>

    <style name="KurbsideSpinnerItemStyle" parent="@style/Widget.AppCompat.Light.Base.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_holo</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- style for TextAppearces -->
    <style name="StandardTextAppearanceLight">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">.1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="StandardTextAppearanceDark">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">.1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="action_button" parent="@style/Widget.AppCompat.ActionButton">
        
     <item name="android:layout_width">match_parent</item>
     <item name="android:layout_height">match_parent</item>
     <item name="android:layout_weight">1</item>
     <item name="android:textColor">@drawable/listing_button_color</item>
     <item name="android:textSize">@dimen/text_medium</item> 
            
     </style>
    <style name="CustomActivityThemeNoActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>